<div class="item" data-type="consumables" data-index="{{id}}">
    <div class="item-data">
        <div class="multiFields-spaced">
            <div>
                <label>{{ localize "dhs-jdr.ui.sheets.inventory.item.name" }} :</label>                
                <input type="text" placeholder="-------------------------" name="system.inventory.consumables.{{id}}.name" data-dtype="String" value="{{name}}">
            </div>
            <div class="price">
                <label>{{ localize "dhs-jdr.ui.sheets.inventory.item.price" }} :</label>
                <input type="number" placeholder="---" name="system.inventory.consumables.{{id}}.price" data-dtype="Number" value="{{formatNumber price}}">
            </div>
            <div class="weight">
                <label>{{ localize "dhs-jdr.ui.sheets.inventory.item.weight" }} :</label>
                <input type="text" placeholder="--" name="system.inventory.consumables.{{id}}.weight" data-dtype="Number" value="{{formatNumber weight}}">
                <label>{{ localize "dhs-jdr.ui.sheets.inventory.item.weightUnit" }}</label>
            </div>
        </div>

        <div class="fieldArea">
            <label>{{ localize "dhs-jdr.ui.sheets.inventory.item.effects" }} :</label>
            <textarea rows="2" placeholder="--------------------------------------------------" name="system.inventory.consumables.{{id}}.effects" data-dtype="String">{{{formatTextarea effects}}}</textarea>
        </div>
    </div>

    <div class="item-actions">
        <i class="fas fa-times deleteItem"></i>
    </div>
</div>