<div class="item" data-type="racialCapacities" data-index="{{id}}">
    <div class="item-data">
        <div class="racialAptitude">
            <label>{{ localize "dhs-jdr.ui.sheets.racialCapacities.name" }} :</label>
            <input type="text" placeholder="--------------------------------------------------" name="system.aptitudes.racialCapacities.{{id}}.name" data-dtype="String" value="{{name}}">
        </div>               
                            
        <div class="fieldArea">
            <label>{{ localize "dhs-jdr.ui.sheets.racialCapacities.description" }} :</label>
            <textarea rows="2" placeholder="-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------" name="system.aptitudes.racialCapacities.{{id}}.description" data-dtype="String">{{{formatTextarea description}}}</textarea>
        </div>
    </div>

    <div class="item-actions">
        <i class="fas fa-times deleteItem"></i>
    </div>
</div>